          {
              "name": "ohos.permission.MICROPHONE",
              "reason": "$string:reason_microphone",
              "usedScene": {
                  "when": "inuse"
              }
          },
          {
              "name": "ohos.permission.MEDIA_LOCATION",
              "reason": "$string:reason_media_location",
              "usedScene": {
                  "when": "inuse"
              }
          },
